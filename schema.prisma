datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model customers {
  customer_id Int         @id @default(autoincrement())
  first_name  String?     @db.VarChar(50)
  last_name   String?     @db.VarChar(50)
  email       String?     @unique @db.VarChar(100)
  phone       String?     @db.VarChar(20)
  address     String?
  purchases   purchases[]
}

model products {
  product_id     Int         @id @default(autoincrement())
  product_name   String      @db.VarChar(100)
  category       String      @db.VarChar(50)
  price          Decimal     @db.Decimal(10, 2)
  stock_quantity Int
  manufacturer   String      @db.VarChar(100)
  weight         Decimal     @db.Decimal(8, 2)
  dimensions     String      @db.VarChar(50)
  color          String      @db.VarChar(30)
  description    String?
  purchases      purchases[]
}

model purchases {
  purchase_id   Int        @id @default(autoincrement())
  customer_id   Int?
  product_id    Int?
  quantity      Int?
  purchase_date DateTime?  @db.Date
  total_amount  Decimal?   @db.Decimal(10, 2)
  customers     customers? @relation(fields: [customer_id], references: [customer_id], onDelete: NoAction, onUpdate: NoAction)
  products      products?  @relation(fields: [product_id], references: [product_id], onDelete: NoAction, onUpdate: NoAction)
}
